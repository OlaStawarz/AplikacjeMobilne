<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="282dp"
        android:layout_height="221dp"
        android:background="@android:color/white"
        android:src="@drawable/medicine"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDodajLek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
        android:id="@+id/buttonPowiadomienia"
        android:layout_width="178dp"
        android:layout_height="49dp"
        android:background="@drawable/round_button"
        android:text="Twoje Powiadomienia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonWyswietlLeki"
        app:layout_constraintTop_toTopOf="@+id/buttonWyswietlLeki" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="Dodaj lek"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWyswietlLeki"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_button"
        android:text="Twoje Leki"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/buttonDodajLek" />

    <Button
        android:id="@+id/buttonDodajLek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Dodaj"
        android:background="@drawable/round_button"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>